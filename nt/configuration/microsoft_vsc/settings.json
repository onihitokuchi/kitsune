{
    // TELEMETRY
    "telemetry.telemetryLevel": "off",
    "redhat.telemetry.enabled": false,
    // GIT
    "diffEditor.ignoreTrimWhitespace": false,
    // SUGGESTION/AUTOCOMPLETION/SYNTAX/ACTIONS/ACCESSIBILITY
    "editor.accessibilitySupport": "off",
    "editor.emptySelectionClipboard": false,
    "editor.quickSuggestions": {
        "other": "off",
        "comments": "off",
        "strings": "off"
    },
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.sortImports": "always",
        "source.fixAll.pylance": "always",
        "source.convertImportFormat": "always",
        "source.organizeImports": "always"
    },
    "editor.codeLens": false,
    "editor.linkedEditing": true,
    "editor.occurrencesHighlight": "off",
    "editor.quickSuggestionsDelay": 0,
    "editor.selectionHighlight": false,
    "editor.snippetSuggestions": "top",
    "editor.suggestOnTriggerCharacters": false,
    "editor.tabCompletion": "on",
    "php.suggest.basic": false,
    "tailwindCSS.emmetCompletions": true,
    "emmet.syntaxProfiles": {
        "blade.php": "html"
    },
    "emmet.includeLanguages": {
        "blade.php": "html",
        "vue": "html"
    },
    //
    "emmet.triggerExpansionOnTab": true,
    "extensions.ignoreRecommendations": true,
    "files.insertFinalNewline": false,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.openRepositoryInParentFolders": "never",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "security.workspace.trust.untrustedFiles": "open",
    // Disable “Peek” Previews
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    // USER INTERFACE
    "breadcrumbs.enabled": false,
    "editor.smoothScrolling": true,
    "editor.fontFamily": "'JetBrains Mono'",
    "editor.lineHeight": 24, // 24|1.2
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.fontVariations": true,
    "editor.renderControlCharacters": false,
    "editor.minimap.enabled": false,
    "editor.scrollBeyondLastLine": false,
    "editor.stickyScroll.enabled": false,
    "editor.rulers": [
        80,
        120
    ],
    "explorer.openEditors.visible": 0,
    "explorer.compactFolders": false,
    "window.newWindowDimensions": "inherit",
    "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font'",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.external.linuxExec": "alacritty",
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "toggle",
    "window.commandCenter": false,
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.activityBar.location": "hidden",
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.settings.editor": "json",
    "workbench.tree.enableStickyScroll": false,
    "workbench.tree.indent": 24,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    "zenMode.fullScreen": false,
    "apc.font.family": "GitLab Mono",
    "apc.listRow": {
        "height": 24,
        "fontSize": 13,
    },
    "material-icon-theme.folders.theme": "classic",
    //
    "[blade]": {
        "editor.defaultFormatter": "shufo.vscode-blade-formatter",
        "editor.autoClosingBrackets": "always"
    },
    "[css][html][javascript][markdown][scss][typescript][vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json][jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    //
    // - dotenv.dotenv-vscode
    "dotenv.enableAutocloaking": false,
    "files.associations": {
        ".env*": "dotenv"
    },
    // -  mehedidracula.php-namespace-resolver
    "namespaceResolver.sortOnSave": true,
    // - streetsidesoftware.code-spell-checker
    // - streetsidesoftware.code-spell-checker-portuguese
    "cSpell.language": "en,pt-PT,pt",
    "cSpell.enabledLanguageIds": [
        "*"
    ],
    // - bmewburn.vscode-intelephense-client
    "intelephense.telemetry.enabled": false,
    "intelephense.environment.documentRoot": "public",
    // - christian-kohler.path-intellisense
    "typescript.suggest.paths": false,
    "javascript.suggest.paths": false,
    // - ms-python.black-formatter
    "black-formatter.importStrategy": "fromEnvironment",
    // - ms-python.python
    "python.createEnvironment.contentButton": "show",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.fixAll": [
        "source.unusedImports",
        "source.convertImportFormat"
    ],
    "cSpell.enableFiletypes": [
        "markdown"
    ]
}