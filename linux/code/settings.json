{
    "workbench.startupEditor": "none",
    "telemetry.telemetryLevel": "off",
    // graphical_user_interface
    "workbench.activityBar.location": "hidden",
    "window.menuBarVisibility": "toggle",
    "window.commandCenter": false,
    "workbench.tree.indent": 24,
    "editor.scrollBeyondLastLine": false,
    "workbench.sideBar.location": "right",
    "explorer.compactFolders": false,
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.iconTheme": "material-icon-theme",
    "breadcrumbs.enabled": false,
    "editor.stickyScroll.enabled": false,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.lineHeight": 24,
    "terminal.integrated.fontFamily": "'JetBrainsMonoNL Nerd Font'",
    //
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.defaultProfile.linux": "zsh",
    // Disable “Peek” Previews
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleReferences": "goto",
    //
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.fixAll.pylance": "always",
        "source.unusedImports": "always",
        "source.sortImports": "always",
        "source.organizeImports": "always",
    },
    "emmet.triggerExpansionOnTab": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.codeLens": false,
    "editor.linkedEditing": true,
    "editor.formatOnSave": true,
    "editor.snippetSuggestions": "bottom",
    "editor.suggestOnTriggerCharacters": false,
    "editor.tabCompletion": "on",
    "editor.quickSuggestionsDelay": 0,
    "editor.quickSuggestions": {
        "other": "off",
        "comments": "off",
        "strings": "off"
    },
    "emmet.syntaxProfiles": {
        "blade": "html"
    },
    "emmet.includeLanguages": {
        "blade": "html",
        "vue": "html"
    },
    //
    "[blade]": {
        "editor.defaultFormatter": "shufo.vscode-blade-formatter",
        "editor.autoClosingBrackets": "always"
    },
    "[css][html][javascript][markdown][scss][typescript][vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json][jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    // bmewburn.vscode-intelephense-client
    "php.suggest.basic": false,
    // christian-kohler.path-intellisense
    "typescript.suggest.paths": false,
    "javascript.suggest.paths": false,
    // dotenv.dotenv-vscode
    "files.associations": {
        ".env*": "dotenv"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": []
    },
    // bradlc.vscode-tailwindcss
    "tailwindCSS.emmetCompletions": true,
    // mehedidracula.php-namespace-resolver
    "namespaceResolver.sortOnSave": true,
    // pkief.material-icon-theme
    "material-icon-theme.folders.theme": "classic",
    // streetsidesoftware.code-spell-checker
    // streetsidesoftware.code-spell-checker-portuguese
    "cSpell.language": "en-GB,pt-PT",
    "cSpell.enabledLanguageIds": [
        "*"
    ],
    "cSpell.useGitignore": false,
    "dotenv.enableAutocloaking": false,
    "python.analysis.fixAll": [
        "source.convertImportFormat",
        "source.unusedImports"
    ],
    "blade.format.enable": true
}